<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mldn.dibmp.dao.IStorageRecordDAO">
	<insert id="addStorage" parameterType="Map">
		INSERT INTO storage_record (said,wid,name,num,price,weight,status,inmid,redate,appmid)
			VALUES (#{said},#{wid},#{title},#{num},#{price},#{weight},1,#{inmid},#{redate},#{appmid})
	</insert>
	<select id="findAllRecord" resultType="StorageRecord">
		SELECT srid,said,name,wid,redate,appmid,num,price,weight,status,inmid FROM storage_record WHERE status=1
	</select>
</mapper>